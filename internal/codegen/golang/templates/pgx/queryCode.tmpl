	rows, err := db.Query(ctx, {{.ConstantName}}, {{.Arg.Params}})
{{- else -}}
func (q *Queries) {{.MethodName}}(ctx context.Context, spanCtx context.Context, {{.Arg.Pair}}) ([]{{.Ret.DefineType}}, error) {
	_, databaseSpan := otel.Tracer("{{.MethodName}}").Start(spanCtx, "database.query.{{.MethodName}}")
	rows, err := q.db.Query(ctx, {{.ConstantName}}, {{.Arg.Params}})
{{- end}}
	if err != nil {
		databaseSpan.SetStatus(codes.Error, err.Error())
		return nil, err
	}
	defer rows.Close()
	{{- if $.EmitEmptySlices}}
	items := []{{.Ret.DefineType}}{}
	{{else}}
	var items []{{.Ret.DefineType}}
	{{end -}}
	for rows.Next() {
		var {{.Ret.Name}} {{.Ret.Type}}
		if err := rows.Scan({{.Ret.Scan}}); err != nil {
			databaseSpan.SetStatus(codes.Error, err.Error())
			return nil, err
		}
		items = append(items, {{.Ret.ReturnName}})
	}
	if err := rows.Err(); err != nil {
		databaseSpan.SetStatus(codes.Error, err.Error())
		return nil, err
	}
	databaseSpan.End()
	return items, nil
}
{{end}}

